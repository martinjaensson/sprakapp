{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"es2015",
			"dom"
		],
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"include": [
		"src/**/*.ts",
		"!src/**/*.spec.ts"
	],
	"exclude": [
		"node_modules"
	],
	"files": [
		"src/app/app.module.ts",
		"src/main.ts"
	],
	"angularCompilerOptions": {
		"genDir": "dist",
		"skipMetadataEmit": false
	}
}