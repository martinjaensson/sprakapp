{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"es2015",
			"dom"
		],
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"typeRoots": [
			"../node_modules/@types"
		],
		"types": [
			"jasmine",
			"node"
		],
		"outDir": "build"
	},
	"exclude": [
		"../node_modules"
	]
}