<?xml version='1.0' encoding='utf-8'?>
<widget id="se.exsitec.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ExApp</name>
    <description>
        
    </description>
    <author email="info@exsitec.se" href="http://exsitec.se">
        Exsitec AB
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />

        <!-- Launcher icons -->
        <icon src="res/android/mdpi/ic_launcher.png" density="mdpi" />
        <icon src="res/android/hdpi/ic_launcher.png" density="hdpi" />
        <icon src="res/android/xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="res/android/xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="res/android/xxxhdpi/ic_launcher.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <!-- App Icons -->
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/ios/appicon/Icon-App-iPhone@3x.png" width="180" height="180" />

        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/ios/appicon/Icon-App-iPhone.png" width="60" height="60" />
        <icon src="res/ios/appicon/Icon-App-iPhone@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/ios/appicon/76pt.png" width="76" height="76" />
        <icon src="res/ios/appicon/76pt@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="res/ios/appicon/40pt.png" width="40" height="40" />
        <icon src="res/ios/appicon/40pt@2x.png" width="80" height="80" />

        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="res/ios/appicon/Icon.png" width="57" height="57" />
        <icon src="res/ios/appicon/Icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/ios/appicon/Icon-72.png" width="72" height="72" />
        <icon src="res/ios/appicon/Icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/ios/appicon/29pt.png" width="29" height="29" />
        <icon src="res/ios/appicon/29pt@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/ios/appicon/Icon-Small-50.png" width="50" height="50" />
        <icon src="res/ios/appicon/icon-Small-50@2x.png" width="100" height="100" />
    </platform>
    <engine name="ios" spec="~4.3.0" />

    <!-- Status bar preferences -->
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />

    <!-- iOS configuration -->
    <preference name="DisallowOverscroll" value="true" />
    <feature name="CDVWKWebViewEngine">
        <param name="ios-package" value="CDVWKWebViewEngine" />
    </feature>
    <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
</widget>
