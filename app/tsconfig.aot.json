{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true
  },

  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ],

  "files": [
    "src/app/app.module.ts",
    "src/main.ts"
  ]

//   "angularCompilerOptions": {
