@model LoginViewModel
<div class="login-page">
    <div class="form">
        <form asp-route="Login">
            <input type="hidden" asp-for="ReturnUrl" />
            <fieldset>
                <div class="form-group">
                    <input class="form-control" placeholder="E-postadress" asp-for="Email" autofocus>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Lösenord" asp-for="Password" autocomplete="off">
                </div>
                @Html.Partial("_ValidationSummary")
                <div class="form-group buttons text-right">
                    <button class="btn btn-primary" name="button" value="login">Logga in</button>
                    <button class="btn btn-default" name="button" value="cancel">Avbryt</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>